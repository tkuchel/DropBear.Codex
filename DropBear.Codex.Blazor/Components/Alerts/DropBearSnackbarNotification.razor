@inherits DropBear.Codex.Blazor.Components.Bases.DropBearComponentBase

@if (IsVisible)
{
    <div id="@SnackbarId"
         class="snackbar @GetSnackbarClasses()"
         role="alert"
         aria-live="assertive"
         @attributes="AdditionalAttributes">
        <div class="snackbar-icon" aria-hidden="true">
            <i class="@GetIconClass()"></i>
        </div>
        <div class="snackbar-content">
            @if (!string.IsNullOrEmpty(Title))
            {
                <div class="snackbar-title">@Title</div>
            }
            <p class="snackbar-message">@Message</p>
        </div>
        @if (!string.IsNullOrEmpty(ActionText))
        {
            <button type="button" class="snackbar-action" @onclick="OnActionClick">@ActionText</button>
        }
        @if (IsDismissible)
        {
            <button type="button" class="snackbar-close" aria-label="Close" @onclick="Dismiss">&times;</button>
        }
        <div class="snackbar-progress" aria-hidden="true"></div>
    </div>
}
