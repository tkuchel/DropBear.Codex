@namespace DropBear.Codex.Blazor.Components.Notifications
@inherits DropBear.Codex.Blazor.Components.Bases.DropBearComponentBase

<div class="@ContainerCssClasses"
     role="region"
     aria-live="polite"
     aria-label="Notifications"
     data-position="@Position.ToString().ToLowerInvariant()"
     data-max-visible="@MaxVisibleSnackbars">

    @foreach (var snackbar in VisibleSnackbars)
    {
        <DropBearSnackbar @key="snackbar.Id"
                          SnackbarInstance="snackbar"
                          OnClose="@(() => HandleSnackbarCloseAsync(snackbar.Id))" />
    }
</div>
