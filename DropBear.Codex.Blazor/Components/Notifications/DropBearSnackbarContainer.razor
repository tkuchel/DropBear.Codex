@namespace DropBear.Codex.Blazor.Components.Notifications
@inherits DropBear.Codex.Blazor.Components.Bases.DropBearComponentBase

<div class="dropbear-snackbar-container @PositionClass"
     role="alert"
     aria-live="polite">
    @foreach (var snackbar in SnackbarService.GetActiveSnackbars().OrderByDescending(s => s.CreatedAt))
    {
        <DropBearSnackbar @key="snackbar.Id"
                          SnackbarInstance="snackbar"
                          OnClose="async () => await SnackbarService.RemoveSnackbar(snackbar.Id)"/>
    }
</div>
