@inherits DropBear.Codex.Blazor.Components.Bases.DropBearComponentBase

@* ValidationErrorsComponent.razor *@
<div class="validation-errors @(_isCollapsed ? "validation-errors--collapsed" : "") mt-2"
     style="display: @(ValidationResult?.IsValid == false ? "block" : "none")">
    <div class="validation-errors__header" @onclick="ToggleCollapseState" aria-expanded="@(!_isCollapsed)">
        <h3 class="validation-errors__title">
            <i class="fas fa-exclamation-triangle"></i>
            Validation Errors
        </h3>
        <i class="fas fa-chevron-up validation-errors__icon" style="transform: rotate(@(_isCollapsed ? "180deg" : "0deg"))"></i>
    </div>
    <ul class="validation-errors__list">
        @if (ValidationResult?.IsValid == false && ValidationResult?.Value.Any() == true)
        {
            foreach (var error in ValidationResult.Value)
            {
                <li class="validation-errors__item">
                    <div class="validation-errors__item-icon-wrapper">
                        <div class="validation-errors__item-icon-glow"></div>
                        <i class="fas fa-exclamation-circle validation-errors__item-icon"></i>
                    </div>
                    <div class="validation-errors__item-content">
                        <div class="validation-errors__item-parameter">@error.Parameter</div>
                        <div class="validation-errors__item-message">@error.ErrorMessage</div>
                    </div>
                </li>
            }
        }
    </ul>
</div>
