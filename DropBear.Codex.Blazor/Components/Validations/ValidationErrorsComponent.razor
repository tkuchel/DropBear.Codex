@inherits DropBear.Codex.Blazor.Components.Bases.DropBearComponentBase

<div class="validation-errors @(IsCollapsed ? "validation-errors--collapsed" : "") mt-2"
     style="display: @(HasErrors ? "block" : "none")">
    <div class="validation-errors__header" @onclick="ToggleCollapseState" aria-expanded="@(!IsCollapsed)">
        <h3 class="validation-errors__title">
            <i class="fas fa-exclamation-triangle"></i>
            Validation Errors
        </h3>
        <i class="fas fa-chevron-up validation-errors__icon"
           style="transform: rotate(@(IsCollapsed ? "180deg" : "0deg"))"></i>
    </div>
    @if (HasErrors)
    {
        <ul class="validation-errors__list @(IsCollapsed ? "hidden" : "visible")">
            @foreach (var error in ValidationResult!.Errors)
            {
                <li class="validation-errors__item">
                    <div class="validation-errors__item-icon-wrapper">
                        <div class="validation-errors__item-icon-glow"></div>
                        <i class="fas fa-exclamation-circle validation-errors__item-icon"></i>
                    </div>
                    <div class="validation-errors__item-content">
                        <div class="validation-errors__item-parameter">@error.Parameter</div>
                        <div class="validation-errors__item-message">@error.ErrorMessage</div>
                    </div>
                </li>
            }
        </ul>
    }
</div>
