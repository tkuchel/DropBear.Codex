@inherits DropBear.Codex.Blazor.Components.Bases.DropBearComponentBase

<div id="@ElementId"
     class="@CssClass"
     role="status"
     tabindex="@(string.IsNullOrEmpty(Tooltip) ? null : "0")"
     aria-label="@(string.IsNullOrEmpty(Tooltip) ? null : Tooltip)"
     @onmouseover="OnTooltipShow"
     @onmouseout="OnTooltipHide"
     @onblur="OnTooltipHide">
    @if (!string.IsNullOrEmpty(Icon))
    {
        <i class="@Icon" aria-hidden="true"></i>
    }

    @if (!string.IsNullOrEmpty(Text))
    {
        <span>@Text</span>
    }

    @if (ShowTooltip && !string.IsNullOrEmpty(Tooltip))
    {
        <div class="dropbear-badge-tooltip"
             role="tooltip"
             id="@($"{ElementId}-tooltip")"
             aria-hidden="@(!ShowTooltip)"
             data-show="@ShowTooltip"
             style="@TooltipStyle">
            @Tooltip
        </div>
    }
</div>
