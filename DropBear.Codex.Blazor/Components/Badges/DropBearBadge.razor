@inherits DropBear.Codex.Blazor.Components.Bases.DropBearComponentBase

<div class="@CssClass"
     title="@(ShowTooltip ? Tooltip : null)"
     @onmouseover="OnTooltipShow"
     @onmouseout="OnTooltipHide">
    @if (!string.IsNullOrEmpty(Icon))
    {
        <i class="@Icon"></i>
    }
    @if (!string.IsNullOrEmpty(Text))
    {
        <span class="badge-text">@Text</span>
    }
</div>

@if (ShowTooltip && !string.IsNullOrEmpty(Tooltip))
{
    <div class="dropbear-tooltip" style="@TooltipStyle">
        @Tooltip
    </div>
}
