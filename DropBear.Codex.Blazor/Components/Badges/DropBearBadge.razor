@inherits DropBear.Codex.Blazor.Components.Bases.DropBearComponentBase

<span id="@ElementId"
      class="@CssClasses"
      role="@(HasTooltip ? "img" : null)"
      aria-label="@AriaLabel"
      title="@(UseNativeTooltip ? Tooltip : null)"
      tabindex="@(HasTooltip && !UseNativeTooltip ? "0" : null)"
      @onmouseenter="@(HasTooltip && !UseNativeTooltip ? EventCallback.Factory.Create<MouseEventArgs>(this, OnTooltipShow) : default)"
      @onmouseleave="@(HasTooltip && !UseNativeTooltip ? EventCallback.Factory.Create(this, OnTooltipHide) : default)"
      @onfocus="@(HasTooltip && !UseNativeTooltip ? EventCallback.Factory.Create<FocusEventArgs>(this, OnTooltipFocus) : default)"
      @onblur="@(HasTooltip && !UseNativeTooltip ? EventCallback.Factory.Create(this, OnTooltipHide) : default)">

    @if (!string.IsNullOrEmpty(Icon))
    {
        <i class="@Icon" aria-hidden="true"></i>
    }

    @if (!string.IsNullOrEmpty(Text))
    {
        <span class="badge-text">@Text</span>
    }

    @if (ChildContent is not null)
    {
        @ChildContent
    }

    @if (HasTooltip && !UseNativeTooltip && showTooltip)
    {
        <div class="badge-tooltip"
             role="tooltip"
             id="@($"{ElementId}-tooltip")"
             aria-hidden="false"
             style="@tooltipStyle">
            @Tooltip
        </div>
    }
</span>
