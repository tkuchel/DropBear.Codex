@inherits DropBear.Codex.Blazor.Components.Bases.DropBearComponentBase

<button @attributes="AdditionalAttributes"
        class="@CssClass"
        type="@ButtonType"
        disabled="@(IsDisabled || IsLoading)"
        aria-disabled="@AriaDisabled"
        aria-busy="@(IsLoading.ToString().ToLowerInvariant())"
        title="@Tooltip"
        @onclick="OnClickHandler"
        @onclick:preventDefault="@(Type != "submit")"
        @onclick:stopPropagation="true">

    @if (IsLoading)
    {
        <span class="dropbear-btn__spinner" aria-hidden="true"></span>
    }
    else if (!string.IsNullOrEmpty(Icon))
    {
        <i class="@Icon dropbear-btn__icon" aria-hidden="true"></i>
    }

    @if (ChildContent is not null)
    {
        <span class="dropbear-btn__content">
            @ChildContent
        </span>
    }

</button>
