@inherits DropBear.Codex.Blazor.Components.Bases.DropBearComponentBase

<IconBase Title="@Title"
          Size="@Size"
          Color="@Color"
          CssClass="@CssClass"
          Clickable="true"
          OnClick="@OnClose"
          @attributes="AdditionalAttributes">
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="@StrokeWidth">
        <path d="M18 6L6 18M6 6l12 12"/>
    </svg>
</IconBase>

@code {
    [Parameter] public string? Title { get; set; } = "Close";

    [Parameter] public int Size { get; set; } = 20;

    [Parameter] public string Color { get; set; } = "currentColor";

    [Parameter] public string CssClass { get; set; } = string.Empty;

    [Parameter] public float StrokeWidth { get; set; } = 1.5f;

    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object>? AdditionalAttributes { get; set; }

}
