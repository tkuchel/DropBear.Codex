@typeparam T
@inherits DropBear.Codex.Blazor.Components.Bases.DropBearComponentBase

<div class="drop-bear-list @(IsCollapsed ? "drop-bear-list--collapsed" : "")" style="--clr-surface-primary: @HeaderColor">
    <div class="drop-bear-list-header" @onclick="ToggleCollapse">
        <h3 class="drop-bear-list-title">
            @if (!string.IsNullOrEmpty(HeaderIcon))
            {
                <i class="@HeaderIcon"></i>
            }
            @Title
        </h3>
        <i class="fas fa-chevron-up drop-bear-list-icon @(IsCollapsed ? "collapsed" : "")"></i>
    </div>
    <ul class="drop-bear-list-list">
        @if (Items == null || Items.Count == 0)
        {
            <li class="drop-bear-list-item">
                <span class="drop-bear-list-item-empty">No items to display</span>
            </li>
        }
        else
        {
            @foreach (var item in Items)
            {
                <li class="drop-bear-list-item">
                    @if (ItemTemplate != null)
                    {
                        @ItemTemplate(item)
                    }
                    else
                    {
                        @item.ToString()
                    }
                </li>
            }
        }
    </ul>
</div>
