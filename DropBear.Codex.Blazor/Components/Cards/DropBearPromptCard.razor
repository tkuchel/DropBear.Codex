@inherits DropBear.Codex.Blazor.Components.Bases.DropBearComponentBase
<div class="prompt-card-container">
    <div class="prompt-card-overlay">
        <div class="prompt-card @PromptType.ToString().ToLower() @(Subtle ? "subtle" : "")">
            <div class="card-header">
                <i class="@Icon" aria-hidden="true"></i>
                <h5 class="card-title">@Title</h5>
            </div>
            <div class="card-body">
                <p class="card-text">
                    @Description
                </p>
                <div class="button-group">
                    @foreach (var button in Buttons)
                    {
                        <button type="button" class="@GetButtonClass(button.Type)" @onclick="@(() => OnButtonClick(button))">
                            @if (!string.IsNullOrEmpty(button.Icon))
                            {
                                <i class="@button.Icon"></i>
                            }
                            @button.Text
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
